{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Enregistrement</h1>

    <div class="mb-4">
        {{ form_start(accountForm) }}
            {{ form_row(accountForm.email) }}
            {{ form_row(accountForm.firstname, {
                label: 'Prénom'
            }) }}
            {{ form_row(accountForm.lastname, {
                label: 'Nom'
            }) }}
            {{ form_row(accountForm.adress, {
                label: 'Adresse complète'
            }) }}
            {{ form_row(accountForm.phone, {
                label: 'Numéro de téléphone'
            }) }}
            {{ form_row(accountForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(accountForm.agreeTerms, {
                label: 'Je suis d\'accord'
            }) }}
            <br>
            <button type="submit" class="btn btn-primary">Créer mon compte</button>
        {{ form_end(accountForm) }}
        <br>
        <button href="https://hypnos.netlify.app/" class="btn btn-primary">Retourner sur le site Hypnos</button>
    </div>
{% endblock %}
